<?xml version="1.0" encoding="UTF-8"?>
<services-config>
      <services>
            <default-channels>
                  <channel ref="my-http"/>
            </default-channels>
      </services>
      <channels>
            <channel-definition id="my-http" class="mx.messaging.channels.HTTPChannel">  
            	<endpoint url="http://{server.name}:{server.port}/{context.root}/messagebroker/httpproxy" class="flex.messaging.endpoints.HTTPEndpoint"/>
            </channel-definition>
      </channels>
</services-config>